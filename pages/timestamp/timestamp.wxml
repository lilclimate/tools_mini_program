<view class="container">
  <view class="section">
    <view class="section-title">时间</view>
    <view class="input-area">
      <input type="text" value="{{dateTime}}" bindinput="onDateTimeInput" />
      <view class="copy-btn" bindtap="copyDateTime">复制</view>
    </view>
  </view>
  
  <view class="button-group">
    <button class="convert-btn" bindtap="onDateTimeToTimestamp">转时间戳</button>
    <button class="convert-btn" bindtap="onTimestampToDateTime">转时间</button>
  </view>

  <view class="section">
    <view class="section-title">时间戳</view>
    <view class="input-area">
      <input type="text" value="{{timestamp}}" bindinput="onTimestampInput" />
      <view class="copy-btn" bindtap="copyTimestamp">复制</view>
    </view>
  </view>
</view>