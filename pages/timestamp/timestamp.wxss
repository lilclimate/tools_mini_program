.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.input-group {
  display: flex;
  flex-direction: column;
  width: 80%;
  margin: 10px;
}

label {
  margin-bottom: 5px;
}

.input-with-button {
  display: flex;
  align-items: center;
}

input {
  flex: 1;
  height: 40px;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

button {
  margin-top: 10px;
  height: 40px;
  padding: 0 15px;
  border: 1px solid #ccc;
  border-radius: 5px;
} 