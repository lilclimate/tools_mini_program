.container {
  padding: 20rpx;
  background: #1c1c1e;
  min-height: 100vh;
  color: #fff;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.input-area {
  background: #2c2c2e;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 80rpx;
}

.input-area input {
  flex: 1;
  color: #fff;
  font-size: 28rpx;
  background: transparent;
  margin-right: 20rpx;
}

.copy-btn {
  color: #30d158;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-left: 2rpx solid #3a3a3c;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
  gap: 20rpx;
}

.convert-btn {
  flex: 1;
  background: #2c2c2e;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  text-align: center;
  border-radius: 12rpx;
  line-height: 1.4;
  margin: 0;
}